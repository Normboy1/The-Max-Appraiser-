{
  "version": 2,
  "builds": [
    {
      "src": "frontend-vite/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "pages/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/pages/api/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/dist/index.html" }
  ]
}
